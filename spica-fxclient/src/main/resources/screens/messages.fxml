<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ButtonBar?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.spica.fx.controllers.MessagesController" alignment="TOP_LEFT" hgap="10" vgap="10" >
    <stylesheets>
        <URL value="@/css/spica.css" />
    </stylesheets>
    <padding><Insets top="20" bottom="20" left="20" right="20"/> </padding>

    <ButtonBar fx:id="btbActions" GridPane.rowIndex="0" GridPane.columnIndex="0"></ButtonBar>
    <TextField fx:id="txtSearch" GridPane.rowIndex="1" GridPane.columnIndex="0"></TextField>
    <ListView fx:id="lviMessages" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS"></ListView>



</GridPane>