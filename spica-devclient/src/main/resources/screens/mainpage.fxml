<?xml version="1.0" encoding="UTF-8"?>

<?import com.calendarfx.view.page.DayPage?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<BorderPane fx:id="border" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.spica.devclient.ui.controller.MainPageController">

    <top>
        <GridPane vgap="10" fx:id="header">
            <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="80.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="20.0" prefWidth="100.0" />
            </columnConstraints>

            <TextField fx:id="txtSearch" GridPane.columnIndex="0" GridPane.rowIndex="0">
            </TextField>
            <HBox fx:id="hbAdditionalInfos" GridPane.columnIndex="1" GridPane.rowIndex="0">
            </HBox>


            <Label fx:id="lblCurrentTask" GridPane.columnIndex="0" GridPane.rowIndex="1">
            </Label>
            <Label fx:id="lblCurrentTaskAdditionalInfos" GridPane.columnIndex="1" GridPane.rowIndex="1">
            </Label>

            <ProgressBar fx:id="pbTask" GridPane.columnIndex="0" GridPane.rowIndex="2">
            </ProgressBar>

            <Label fx:id="lblTime" GridPane.columnIndex="1" GridPane.rowIndex="2">
            </Label>


        </GridPane>
    </top>
    <left>
        <ToolBar fx:id="tbaActions" orientation="VERTICAL">
        </ToolBar>
    </left>

    <center>
        <ListView fx:id="lviTopics" minWidth="600">

        </ListView>
    </center>
    <right>
        <DayPage fx:id="cviDayPage">

        </DayPage>
    </right>


</BorderPane>